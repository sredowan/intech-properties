<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Passthrough for valid files/directories (images, assets, etc.)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 2. SPA Catch-all: Redirect everything else to index.html
  RewriteRule ^ index.html [L]
</IfModule>
