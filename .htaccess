<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Allow access to direct files and directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Don't rewrite API calls (let them be handled by server.js if it's running, or fail)
  RewriteCond %{REQUEST_URI} ^/api/ [NC]
  RewriteRule ^ - [L]

  # Don't rewrite Uploads
  RewriteCond %{REQUEST_URI} ^/uploads/ [NC]
  RewriteRule ^ - [L]

  # Redirect everything else to dist/index.html (SPA Fallback)
  RewriteRule ^ dist/index.html [L]
</IfModule>
